<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @list.name %>
</p>
<%= link_to 'Edit', edit_list_path(@list) %> |
<%= link_to 'Back', lists_path %> <br>
<br>

<table>
<% @list.items.each do |item| %>
  <tr>
    <td><%= item.description %></td>
    <td><%= item.complete %></td>
  <tr>
<% end %>
</table>


<h2>Add a task:</h2>
<%= form_for([@list, @items]) do |f| %>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.hidden_field :list_id, :value => params[:id] %>
    <%= f.hidden_field :complete, :value => false %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
